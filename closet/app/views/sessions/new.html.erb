<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div>
    <%= form_for(:session, url: login_path) do |f| %>

	    <% flash.each do |key, value| %>
	    	<div> <%= key %>: <%= value %></div>
    	<% end %>

	  <div>
	      <%= f.label :username %>
	      <%= f.text_field :username %>
  	  </div>
  	  <div>
	      <%= f.label :password %>
	      <%= f.password_field :password %>
  	  </div>
  	  <div>
      	<%= f.submit "Log in" %>
  	  </div>
    <% end %>
    <%= link_to 'Back', root_path %>
</div>